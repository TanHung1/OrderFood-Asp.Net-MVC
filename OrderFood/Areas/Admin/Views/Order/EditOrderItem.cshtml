@model OrderFood.Models.OrderItem
@using OrderFood.Repository;

@inject IOrderRepository _orderRepository;
<h1>Chỉnh sửa chi tiết đơn đặt hàng</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateOrderItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderItemId" />
            <input asp-for="OrderDate" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="NameDish" class="control-label">Tên món ăn</label>
                <input asp-for="NameDish" class="form-control" />
                <span asp-validation-for="NameDish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Tổng số lượng</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label">Tổng giá</label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">Thông tin khách hàng</label>
                <input asp-for="OrderId" class="form-control" list="order-list" />
                <datalist id="order-list">
                    @foreach (var item in ViewBag.OrderId)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </datalist>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option value="Chưa xác nhận">Chưa xác nhận</option>
                    <option value="Đã xác nhận">Đã xác nhận</option>
                    <option value="Đang giao">Đang giao</option>
                    <option value="Đã giao">Đã giao</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Chỉnh sửa đơn hàng" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

