@model OrderFood.Models.Category
<div style="padding-left:50px">
<h1>Tạo loại món ăn</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="saveCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameCategory" class="control-label"></label>
                <input asp-for="NameCategory" class="form-control" />
                <span asp-validation-for="NameCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo loại món" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</div>

